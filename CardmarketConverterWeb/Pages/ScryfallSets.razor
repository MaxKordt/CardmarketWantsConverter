@page "/scryfall-sets"
@using CardmarketConverterWeb.Services
@using CardmarketConverterWeb.Models
@inject ScryfallDataService ScryfallData

<PageTitle>Scryfall Sets</PageTitle>

<h1>Scryfall Sets</h1>

<div class="container">
    <div class="alert alert-info" role="alert">
        <strong>ðŸ“š Scryfall Card Database:</strong> Browse all Magic: The Gathering sets from the Scryfall bulk data.
        Independent from Cardmarket expansions.
    </div>

    @if (!dataLoaded && !loadingData)
    {
        <div class="card mb-3">
            <div class="card-header">
                <h5>Select Bulk Data File to Load</h5>
            </div>
            <div class="card-body">
                <p>Choose which Scryfall bulk data file to load. Place the downloaded file in <code>wwwroot/Scryfall/</code> with the corresponding name.</p>
                <p class="text-muted">Download from: <a href="https://scryfall.com/docs/api/bulk-data" target="_blank">Scryfall Bulk Data</a></p>
                
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="card-title">Oracle Cards</h6>
                                <p class="card-text">
                                    <small>~50MB, Recommended</small><br />
                                    Unique card faces with Oracle text
                                </p>
                                <button class="btn btn-primary w-100" @onclick='() => LoadDataFile("oracle-cards")'>
                                    Load Oracle Cards
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="card-title">Default Cards</h6>
                                <p class="card-text">
                                    <small>~80MB</small><br />
                                    Most cards without all variations
                                </p>
                                <button class="btn btn-primary w-100" @onclick='() => LoadDataFile("default-cards")'>
                                    Load Default Cards
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="card-title">All Cards</h6>
                                <p class="card-text">
                                    <small>~200MB, May fail</small><br />
                                    Every card printing
                                </p>
                                <button class="btn btn-warning w-100" @onclick='() => LoadDataFile("all-cards")'>
                                    Load All Cards
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-3">
                    <details>
                        <summary class="text-muted" style="cursor: pointer;">Advanced: Load custom file</summary>
                        <div class="mt-2">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="filename.json" @bind="customFileName" />
                                <button class="btn btn-outline-secondary" @onclick="() => LoadDataFile(customFileName)">
                                    Load Custom File
                                </button>
                            </div>
                            <small class="text-muted">File must be in wwwroot/Scryfall/ directory</small>
                        </div>
                    </details>
                </div>
            </div>
        </div>
    }
    
    @if (loadingData)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading Scryfall data... This may take a minute.</p>
            <p class="text-muted">@loadingMessage</p>
        </div>
    }

    @if (!dataLoaded && !loadingData && loadError != null)
    {
        <div class="alert alert-danger" role="alert">
            <h5>Failed to load data</h5>
            <p>@loadError</p>
            <button class="btn btn-sm btn-outline-danger" @onclick="ResetLoadState">Try Another File</button>
        </div>
    }

    @if (!dataLoaded)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading Scryfall data...</p>
        </div>
    }
    else if (sets.Count == 0)
    {
        <div class="alert alert-warning" role="alert">
            No sets found. Make sure the Scryfall bulk data file is in the Scryfall/ directory.
        </div>
    }
    else
    {
        <div class="mb-3 d-flex justify-content-between align-items-center">
            <div>
                <span class="badge bg-primary fs-5">Total: @sets.Count sets</span>
                @if (setsWithCards.Count > 0)
                {
                    <span class="badge bg-success fs-5 ms-2">@setsWithCards.Count with cards loaded</span>
                }
            </div>
            <div>
                <input type="text" class="form-control" placeholder="Search sets..." @bind="searchQuery" @bind:event="oninput" />
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
            @foreach (var set in FilteredSets.Take(100))
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h6 class="card-title">@set.Name</h6>
                                    <p class="card-text">
                                        <code class="text-primary">@set.Code</code>
                                        @if (set.CardCount > 0)
                                        {
                                            <span class="badge bg-info ms-2">@set.CardCount cards</span>
                                        }
                                    </p>
                                </div>
                                <div>
                                    @if (loadingSets.Contains(set.Code))
                                    {
                                        <button class="btn btn-sm btn-outline-secondary" disabled>
                                            <span class="spinner-border spinner-border-sm me-1"></span>
                                            Loading...
                                        </button>
                                    }
                                    else if (setsWithCards.Contains(set.Code))
                                    {
                                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => ToggleCards(set.Code)">
                                            @(expandedSets.Contains(set.Code) ? "â–¼" : "â–º")
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-success" @onclick="() => LoadCards(set.Code)">
                                            Load Cards
                                        </button>
                                    }
                                </div>
                            </div>

                            @if (expandedSets.Contains(set.Code) && setCards.ContainsKey(set.Code))
                            {
                                <div class="mt-3">
                                    <div style="max-height: 400px; overflow-y: auto;">
                                        <div class="row row-cols-1 g-2">
                                            @foreach (var card in setCards[set.Code].Take(30))
                                            {
                                                <div class="col">
                                                    <div class="card">
                                                        <div class="card-body p-2">
                                                            <div class="d-flex align-items-center">
                                                                @if (!string.IsNullOrEmpty(card.ImageUris?.Small))
                                                                {
                                                                    <img src="@card.ImageUris.Small" alt="@card.Name" style="width: 50px; height: 70px; object-fit: cover;" class="me-2 rounded" />
                                                                }
                                                                <div class="flex-grow-1">
                                                                    <small><strong>@card.Name</strong></small>
                                                                    <br />
                                                                    <div class="d-flex gap-1 flex-wrap">
                                                                        @if (!string.IsNullOrEmpty(card.CollectorNumber))
                                                                        {
                                                                            <small class="badge bg-secondary">#@card.CollectorNumber</small>
                                                                        }
                                                                        @if (!string.IsNullOrEmpty(card.Rarity))
                                                                        {
                                                                            <small class="badge" style="background-color: @GetRarityColor(card.Rarity)">@card.Rarity</small>
                                                                        }
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        @if (setCards[set.Code].Count > 30)
                                        {
                                            <div class="alert alert-info mt-2 mb-0">
                                                Showing first 30 of @setCards[set.Code].Count cards
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (FilteredSets.Count > 100)
        {
            <div class="alert alert-info mt-3">
                Showing first 100 of @FilteredSets.Count sets. Use search to filter.
            </div>
        }
    }
</div>

@code {
    private List<SetInfo> sets = new();
    private Dictionary<string, List<Card>> setCards = new();
    private HashSet<string> loadingSets = new();
    private HashSet<string> expandedSets = new();
    private HashSet<string> setsWithCards = new();
    private bool dataLoaded = false;
    private bool loadingData = false;
    private string? loadError = null;
    private string loadingMessage = string.Empty;
    private string searchQuery = string.Empty;
    private string customFileName = string.Empty;

    private List<SetInfo> FilteredSets
    {
        get
        {
            if (string.IsNullOrWhiteSpace(searchQuery))
                return sets;

            var query = searchQuery.ToLower();
            return sets.Where(s =>
                s.Name.ToLower().Contains(query) ||
                s.Code.ToLower().Contains(query)
            ).ToList();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        // Don't auto-load anymore - wait for user selection
    }

    private async Task LoadDataFile(string fileType)
    {
        loadingData = true;
        loadError = null;
        loadingMessage = $"Loading {fileType} data...";
        StateHasChanged();

        try
        {
            // Set the file to load
            ScryfallData.SetFileToLoad(fileType);
            
            // Load the data
            dataLoaded = await ScryfallData.LoadBulkDataAsync();

            if (dataLoaded)
            {
                loadingMessage = "Loading set list...";
                StateHasChanged();
                await LoadSetList();
                loadingMessage = "Complete!";
            }
            else
            {
                loadError = $"Failed to load {fileType}.json. Please ensure the file exists in wwwroot/Scryfall/ and is valid JSON.";
            }
        }
        catch (Exception ex)
        {
            loadError = $"Error: {ex.Message}";
            dataLoaded = false;
        }
        finally
        {
            loadingData = false;
            StateHasChanged();
        }
    }

    private void ResetLoadState()
    {
        dataLoaded = false;
        loadingData = false;
        loadError = null;
        sets.Clear();
        ScryfallData.ClearData();
    }

    private async Task LoadSetList()
    {
        var setCodes = await ScryfallData.GetAvailableSetsAsync();
        
        sets = setCodes.Select(code =>
        {
            var cards = ScryfallData.GetCardsForSet(code);
            return new SetInfo
            {
                Code = code,
                Name = cards.FirstOrDefault()?.SetName ?? code.ToUpper(),
                CardCount = cards.Count
            };
        })
        .Where(s => s.CardCount > 0)
        .OrderBy(s => s.Name)
        .ToList();

        StateHasChanged();
    }

    private void LoadCards(string setCode)
    {
        if (loadingSets.Contains(setCode))
            return;

        loadingSets.Add(setCode);
        StateHasChanged();

        try
        {
            var cards = ScryfallData.GetCardsForSet(setCode);
            setCards[setCode] = cards;
            setsWithCards.Add(setCode);
            expandedSets.Add(setCode);
        }
        finally
        {
            loadingSets.Remove(setCode);
            StateHasChanged();
        }
    }

    private void ToggleCards(string setCode)
    {
        if (expandedSets.Contains(setCode))
        {
            expandedSets.Remove(setCode);
        }
        else
        {
            expandedSets.Add(setCode);
        }
    }

    private string GetRarityColor(string rarity)
    {
        return rarity.ToLower() switch
        {
            "common" => "#1e1e1e",
            "uncommon" => "#6c757d",
            "rare" => "#ffc107",
            "mythic" => "#dc3545",
            _ => "#6c757d"
        };
    }

    private class SetInfo
    {
        public string Code { get; set; } = string.Empty;
        public string Name { get; set; } = string.Empty;
        public int CardCount { get; set; }
    }
}

