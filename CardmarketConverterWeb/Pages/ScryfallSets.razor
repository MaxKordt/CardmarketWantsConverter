@page "/scryfall-sets"
@using System.Net.Http.Json
@using System.Text.Json
@inject HttpClient HttpClient
@inject IJSRuntime JS

<PageTitle>Scryfall Sets</PageTitle>

<h1>Scryfall Sets</h1>

<div class="container">
    <div class="alert alert-info" role="alert">
        <strong>ðŸ“š Scryfall Sets:</strong> Browse all Magic: The Gathering sets from the Scryfall API.
        Organized by release year.
        @if (!string.IsNullOrEmpty(cacheInfo))
        {
            <br />
            <small class="text-muted">@cacheInfo</small>
        }
    </div>

    @if (loading)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading sets from Scryfall API...</p>
        </div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger" role="alert">
            <h5>Error loading sets</h5>
            <p>@error</p>
            <button class="btn btn-sm btn-outline-danger" @onclick="() => LoadSets(true)">Retry</button>
        </div>
    }
    else if (yearGroups.Count == 0)
    {
        <div class="alert alert-warning" role="alert">
            No sets found.
        </div>
    }
    else
    {
        <div class="mb-3 d-flex justify-content-between align-items-center">
            <div>
                <span class="badge bg-primary fs-5">Total: @allSets.Count sets</span>
            </div>
            <div>
                <button class="btn btn-outline-primary" @onclick="() => LoadSets(true)" disabled="@loading">
                    @if (loading)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    else
                    {
                        <span>ðŸ”„</span>
                    }
                    Refresh from API
                </button>
            </div>
        </div>

        @foreach (var yearGroup in yearGroups)
        {
            var isCurrentYear = yearGroup.Year == DateTime.Now.Year;
            
            <div class="mb-3">
                <div class="card">
                    <div class="card-header bg-primary text-white" 
                         style="cursor: pointer;" 
                         @onclick="() => ToggleYear(yearGroup.Year)">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <span>@(expandedYears.Contains(yearGroup.Year) ? "â–¼" : "â–º")</span>
                                <strong>@yearGroup.Year</strong>
                            </h5>
                            <span class="badge bg-light text-dark">@yearGroup.Sets.Count sets</span>
                        </div>
                    </div>
                    
                    @if (expandedYears.Contains(yearGroup.Year))
                    {
                        <div class="card-body">
                            <div class="list-group">
                                @foreach (var set in yearGroup.Sets)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h6 class="mb-1">@set.Name</h6>
                                                @if (!string.IsNullOrEmpty(set.ReleasedAt))
                                                {
                                                    <small class="text-muted">@set.ReleasedAt</small>
                                                }
                                            </div>
                                            <div class="d-flex gap-2 mt-1">
                                                <span class="badge bg-secondary"><code class="text-white">@set.Code</code></span>
                                                @if (set.CardCount > 0)
                                                {
                                                    <span class="badge bg-info">@set.CardCount cards</span>
                                                }
                                                @if (!string.IsNullOrEmpty(set.SetType))
                                                {
                                                    <span class="badge bg-success">@set.SetType</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="ms-3">
                                            @if (!string.IsNullOrEmpty(set.ScryfallUri))
                                            {
                                                <a href="@set.ScryfallUri" target="_blank" 
                                                   class="btn btn-sm btn-outline-primary" title="View on Scryfall">
                                                    Open on Scryfall
                                                </a>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

@code {
    private List<ScryfallSet> allSets = new();
    private List<YearGroup> yearGroups = new();
    private HashSet<int> expandedYears = new();
    private bool loading = true;
    private string? error = null;
    private string cacheInfo = string.Empty;
    
    private const string CacheKey = "scryfall_sets_cache";
    private const string CacheTimestampKey = "scryfall_sets_cache_timestamp";

    protected override async Task OnInitializedAsync()
    {
        // Expand current year by default
        expandedYears.Add(DateTime.Now.Year);
        
        await LoadSets(forceRefresh: false);
    }

    private async Task LoadSets(bool forceRefresh = false)
    {
        loading = true;
        error = null;
        StateHasChanged();

        try
        {
            List<ScryfallSet>? cachedSets = null;
            
            if (!forceRefresh)
            {
                // Try to load from cache
                cachedSets = await LoadFromCache();
            }

            if (cachedSets != null && cachedSets.Count > 0)
            {
                // Use cached data
                allSets = cachedSets;
                Console.WriteLine($"Loaded {allSets.Count} sets from cache");
            }
            else
            {
                // Fetch from API
                Console.WriteLine("Fetching sets from Scryfall API...");
                var response = await HttpClient.GetFromJsonAsync<ScryfallSetsResponse>("https://api.scryfall.com/sets");
                
                if (response?.Data != null)
                {
                    allSets = response.Data
                        .OrderByDescending(s => s.ReleasedAt)
                        .ToList();

                    // Save to cache
                    await SaveToCache(allSets);
                    cacheInfo = $"ðŸ“¡ Fetched from API at {DateTime.Now:HH:mm} on {DateTime.Now:yyyy-MM-dd}";
                    Console.WriteLine($"Loaded {allSets.Count} sets from API and cached");
                }
                else
                {
                    error = "Failed to load sets from Scryfall API";
                }
            }

            // Group by year
            if (allSets.Count > 0)
            {
                yearGroups = allSets
                    .Where(s => !string.IsNullOrEmpty(s.ReleasedAt))
                    .Select(s => new { Set = s, Year = ExtractYear(s.ReleasedAt) })
                    .Where(x => x.Year.HasValue)
                    .GroupBy(x => x.Year!.Value)
                    .OrderByDescending(g => g.Key)
                    .Select(g => new YearGroup
                    {
                        Year = g.Key,
                        Sets = g.Select(x => x.Set).ToList()
                    })
                    .ToList();
            }
        }
        catch (Exception ex)
        {
            error = $"Error: {ex.Message}";
            Console.WriteLine($"Error loading sets: {ex.Message}");
        }
        finally
        {
            loading = false;
            StateHasChanged();
        }
    }

    private async Task<List<ScryfallSet>?> LoadFromCache()
    {
        try
        {
            var cacheJson = await JS.InvokeAsync<string>("localStorage.getItem", CacheKey);
            
            if (!string.IsNullOrEmpty(cacheJson))
            {
                var sets = JsonSerializer.Deserialize<List<ScryfallSet>>(cacheJson);
                
                // Get cache timestamp for display
                var timestampJson = await JS.InvokeAsync<string>("localStorage.getItem", CacheTimestampKey);
                if (!string.IsNullOrEmpty(timestampJson))
                {
                    var timestamp = DateTime.Parse(timestampJson);
                    var age = DateTime.Now - timestamp;
                    
                    var daysOld = (int)age.TotalDays;
                    var hoursOld = (int)age.TotalHours % 24;
                    
                    if (daysOld > 0)
                    {
                        cacheInfo = $"ðŸ’¾ Cached data ({daysOld}d {hoursOld}h old)";
                    }
                    else if (hoursOld > 0)
                    {
                        var minutesOld = (int)age.TotalMinutes % 60;
                        cacheInfo = $"ðŸ’¾ Cached data ({hoursOld}h {minutesOld}m old)";
                    }
                    else
                    {
                        var minutesOld = (int)age.TotalMinutes;
                        cacheInfo = $"ðŸ’¾ Cached data ({minutesOld}m old)";
                    }
                }
                else
                {
                    cacheInfo = "ðŸ’¾ Cached data";
                }
                
                return sets;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading from cache: {ex.Message}");
        }
        
        return null;
    }

    private async Task SaveToCache(List<ScryfallSet> sets)
    {
        try
        {
            var json = JsonSerializer.Serialize(sets);
            await JS.InvokeVoidAsync("localStorage.setItem", CacheKey, json);
            await JS.InvokeVoidAsync("localStorage.setItem", CacheTimestampKey, DateTime.Now.ToString("o"));
            Console.WriteLine("Sets saved to cache");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving to cache: {ex.Message}");
        }
    }

    private void ToggleYear(int year)
    {
        if (expandedYears.Contains(year))
        {
            expandedYears.Remove(year);
        }
        else
        {
            expandedYears.Add(year);
        }
    }

    private int? ExtractYear(string? releaseDate)
    {
        if (string.IsNullOrEmpty(releaseDate))
            return null;

        // Release date is in YYYY-MM-DD format
        if (DateTime.TryParse(releaseDate, out DateTime date))
        {
            return date.Year;
        }

        return null;
    }

    // API Response Models
    // ...existing code...
    private class ScryfallSetsResponse
    {
        [System.Text.Json.Serialization.JsonPropertyName("data")]
        public List<ScryfallSet>? Data { get; set; }
    }

    private class ScryfallSet
    {
        [System.Text.Json.Serialization.JsonPropertyName("code")]
        public string Code { get; set; } = string.Empty;
        
        [System.Text.Json.Serialization.JsonPropertyName("name")]
        public string Name { get; set; } = string.Empty;
        
        [System.Text.Json.Serialization.JsonPropertyName("released_at")]
        public string? ReleasedAt { get; set; }
        
        [System.Text.Json.Serialization.JsonPropertyName("card_count")]
        public int CardCount { get; set; }
        
        [System.Text.Json.Serialization.JsonPropertyName("set_type")]
        public string? SetType { get; set; }
        
        [System.Text.Json.Serialization.JsonPropertyName("scryfall_uri")]
        public string? ScryfallUri { get; set; }
        
        [System.Text.Json.Serialization.JsonPropertyName("icon_svg_uri")]
        public string? IconSvgUri { get; set; }
    }

    private class YearGroup
    {
        public int Year { get; set; }
        public List<ScryfallSet> Sets { get; set; } = new();
    }
}

