@page "/expansions"
@using CardmarketConverterWeb.Services
@using CardmarketConverterWeb.Models
@using System.Text
@inject ExpansionListService ExpansionList
@inject IJSRuntime JS
@implements IDisposable

<PageTitle>All Expansions</PageTitle>

<h1>All Expansions</h1>

<div class="container">
    <div class="alert alert-info" role="alert">
        <strong>ðŸ’¾ Storage:</strong> Your expansions are automatically saved in your browser's storage. 
        Use the download buttons below if you want to export a backup file.
    </div>
    
    @if (expansionObjects.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            No expansions found. Use the converter to extract expansions first.
        </div>
    }
    else
    {
        <div class="mb-3 d-flex justify-content-between align-items-center">
            <div>
                <span class="badge bg-primary fs-5">Total: @expansionObjects.Count expansions</span>
            </div>
            <div>
                <button class="btn btn-success me-2" @onclick="DownloadAsJson">
                    Download as JSON
                </button>
                <button class="btn btn-success me-2" @onclick="DownloadAsTxt">
                    Download as TXT
                </button>
                <button class="btn btn-danger" @onclick="ClearAll">
                    Clear All
                </button>
            </div>
        </div>

        <ul class="nav nav-tabs mb-3" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "list" ? "active" : "")" @onclick='() => activeTab = "list"'>
                    List View
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "details" ? "active" : "")" @onclick='() => activeTab = "details"'>
                    Detailed View
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "json" ? "active" : "")" @onclick='() => activeTab = "json"'>
                    JSON View
                </button>
            </li>
        </ul>

        @if (activeTab == "list")
        {
            <div class="card">
                <div class="card-body">
                    @{
                        var groupedByYear = GetExpansionsGroupedByYear();
                    }
                    
                    @if (groupedByYear.Count == 0)
                    {
                        <p class="text-muted">No expansions with release dates found.</p>
                    }
                    else
                    {
                        @foreach (var yearGroup in groupedByYear)
                        {
                            var isCurrentYear = yearGroup.Year == DateTime.Now.Year;
                            var isExpanded = expandedYears.Contains(yearGroup.Year);
                            
                            <div class="mb-3">
                                <div class="card">
                                    <div class="card-header bg-primary text-white" 
                                         style="cursor: pointer;" 
                                         @onclick="() => ToggleYear(yearGroup.Year)">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0">
                                                <span>@(isExpanded ? "â–¼" : "â–º")</span>
                                                <strong>@yearGroup.Year</strong>
                                            </h5>
                                            <span class="badge bg-light text-dark">@yearGroup.Expansions.Count expansions</span>
                                        </div>
                                    </div>
                                    
                                    @if (isExpanded)
                                    {
                                        <div class="card-body">
                                            <div class="list-group">
                                                @foreach (var expansion in yearGroup.Expansions)
                                                {
                                                    <div class="list-group-item d-flex justify-content-between align-items-start">
                                                        <div class="flex-grow-1">
                                                            <div class="d-flex w-100 justify-content-between">
                                                                <h6 class="mb-1">@expansion.Name</h6>
                                                                @if (!string.IsNullOrEmpty(expansion.ReleaseDate))
                                                                {
                                                                    <small class="text-muted">@expansion.ReleaseDate</small>
                                                                }
                                                            </div>
                                                            <div class="d-flex gap-2 mt-1">
                                                                @if (expansion.CardCount.HasValue)
                                                                {
                                                                    <span class="badge bg-info">@expansion.CardCount Karten</span>
                                                                }
                                                                @if (!string.IsNullOrEmpty(expansion.SetCode))
                                                                {
                                                                    <span class="badge bg-secondary"><code class="text-white">@expansion.SetCode</code></span>
                                                                }
                                                            </div>
                                                        </div>
                                                        <div class="ms-3">
                                                            @if (!string.IsNullOrEmpty(expansion.Url))
                                                            {
                                                                <a href="https://www.cardmarket.com@expansion.Url" target="_blank" 
                                                                   class="btn btn-sm btn-outline-primary me-1" title="View on Cardmarket">
                                                                    View
                                                                </a>
                                                            }
                                                            <button class="btn btn-sm btn-outline-danger" 
                                                                    @onclick="() => RemoveExpansion(expansion.Name)" 
                                                                    title="Delete">
                                                                Delete
                                                            </button>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        
                        @if (GetExpansionsWithoutDate().Any())
                        {
                            <div class="mt-4">
                                <h5>Expansions without Release Date</h5>
                                <div class="expansion-badges">
                                    @foreach (var expansion in GetExpansionsWithoutDate())
                                    {
                                        <span class="badge bg-secondary me-2 mb-2 d-inline-flex align-items-center">
                                            @expansion.Name
                                            <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.6rem;" 
                                                    @onclick="() => RemoveExpansion(expansion.Name)" aria-label="Remove"></button>
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        }
        else if (activeTab == "details")
        {
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Set Code</th>
                                    <th>Cards</th>
                                    <th>Release Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var expansion in expansionObjects)
                                {
                                    <tr>
                                        <td>
                                            <strong>@expansion.Name</strong>
                                            @if (!string.IsNullOrEmpty(expansion.ImageUrl))
                                            {
                                                <br />
                                                <img src="@expansion.ImageUrl" alt="@expansion.Name" style="max-width: 64px; max-height: 64px; margin-top: 4px;" />
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(expansion.SetCode))
                                            {
                                                <code>@expansion.SetCode</code>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (expansion.CardCount.HasValue)
                                            {
                                                <span>@expansion.CardCount</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(expansion.ReleaseDate))
                                            {
                                                <span>@expansion.ReleaseDate</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(expansion.Url))
                                            {
                                                <a href="https://www.cardmarket.com@expansion.Url" target="_blank" class="btn btn-sm btn-primary me-1">View</a>
                                            }
                                            <button class="btn btn-sm btn-danger" @onclick="() => RemoveExpansion(expansion.Name)">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else if (activeTab == "json")
        {
            <div class="card">
                <div class="card-body">
                    <h5>JSON Format</h5>
                    <p class="text-muted">This is the format used for storage and export. You can use this data in other applications.</p>
                    <textarea class="form-control font-monospace" rows="25" readonly>@jsonContent</textarea>
                </div>
            </div>
        }
    }
</div>

@code {
    private List<Expansion> expansionObjects = new();
    private string textContent = string.Empty;
    private string jsonContent = string.Empty;
    private string activeTab = "list";
    private HashSet<int> expandedYears = new();

    protected override async Task OnInitializedAsync()
    {
        await ExpansionList.InitializeAsync();
        LoadExpansions();
        ExpansionList.OnExpansionsChanged += OnExpansionsChanged;
        
        // Expand current year by default
        expandedYears.Add(DateTime.Now.Year);
    }

    private void LoadExpansions()
    {
        expansionObjects = ExpansionList.GetAllExpansions();
        var expansionNames = ExpansionList.GetAll();
        textContent = string.Join(Environment.NewLine, expansionNames);
        jsonContent = ExpansionList.ExportAsJson();
    }

    private void OnExpansionsChanged()
    {
        LoadExpansions();
        StateHasChanged();
    }
    
    private void ToggleYear(int year)
    {
        if (expandedYears.Contains(year))
        {
            expandedYears.Remove(year);
        }
        else
        {
            expandedYears.Add(year);
        }
    }

    private async Task DownloadAsTxt()
    {
        if (expansionObjects.Count == 0) return;
        
        var fileName = $"expansions_{DateTime.Now:yyyyMMdd_HHmmss}.txt";
        var bytes = Encoding.UTF8.GetBytes(textContent);
        var base64 = Convert.ToBase64String(bytes);
        
        await JS.InvokeVoidAsync("downloadFile", fileName, base64);
    }

    private async Task DownloadAsJson()
    {
        if (expansionObjects.Count == 0) return;
        
        var fileName = $"expansions_{DateTime.Now:yyyyMMdd_HHmmss}.json";
        var bytes = Encoding.UTF8.GetBytes(jsonContent);
        var base64 = Convert.ToBase64String(bytes);
        
        await JS.InvokeVoidAsync("downloadFile", fileName, base64);
    }

    private async Task RemoveExpansion(string expansionName)
    {
        await ExpansionList.RemoveAsync(expansionName);
    }

    private async Task ClearAll()
    {
        await ExpansionList.ClearAllAsync();
    }

    private List<YearGroup> GetExpansionsGroupedByYear()
    {
        var expansionsWithDates = expansionObjects
            .Where(e => !string.IsNullOrEmpty(e.ReleaseDate))
            .Select(e => new
            {
                Expansion = e,
                Year = ExtractYear(e.ReleaseDate),
                SortDate = ParseGermanDate(e.ReleaseDate)
            })
            .Where(x => x.Year.HasValue)
            .OrderByDescending(x => x.SortDate) // Newest first
            .ToList();

        return expansionsWithDates
            .GroupBy(x => x.Year!.Value)
            .OrderByDescending(g => g.Key) // Newest year first
            .Select(g => new YearGroup
            {
                Year = g.Key,
                Expansions = g.Select(x => x.Expansion).ToList()
            })
            .ToList();
    }

    private List<Expansion> GetExpansionsWithoutDate()
    {
        return expansionObjects
            .Where(e => string.IsNullOrEmpty(e.ReleaseDate))
            .OrderBy(e => e.Name)
            .ToList();
    }

    private int? ExtractYear(string? releaseDate)
    {
        if (string.IsNullOrEmpty(releaseDate))
            return null;

        // Extract year from German date format like "5. Dezember 2025"
        var yearMatch = System.Text.RegularExpressions.Regex.Match(releaseDate, @"\d{4}");
        if (yearMatch.Success && int.TryParse(yearMatch.Value, out int year))
        {
            return year;
        }

        return null;
    }

    private DateTime ParseGermanDate(string? releaseDate)
    {
        if (string.IsNullOrEmpty(releaseDate))
            return DateTime.MinValue;

        try
        {
            // Parse German date format like "5. Dezember 2025"
            var parts = releaseDate.Split(' ', StringSplitOptions.RemoveEmptyEntries);
            if (parts.Length >= 3)
            {
                var day = int.Parse(parts[0].TrimEnd('.'));
                var monthName = parts[1];
                var year = int.Parse(parts[2]);

                var monthMap = new Dictionary<string, int>
                {
                    {"Januar", 1}, {"Februar", 2}, {"MÃ¤rz", 3}, {"April", 4},
                    {"Mai", 5}, {"Juni", 6}, {"Juli", 7}, {"August", 8},
                    {"September", 9}, {"Oktober", 10}, {"November", 11}, {"Dezember", 12}
                };

                if (monthMap.TryGetValue(monthName, out int month))
                {
                    return new DateTime(year, month, day);
                }
            }
        }
        catch
        {
            // Return MinValue if parsing fails
        }

        return DateTime.MinValue;
    }

    private class YearGroup
    {
        public int Year { get; set; }
        public List<Expansion> Expansions { get; set; } = new();
    }

    public void Dispose()
    {
        ExpansionList.OnExpansionsChanged -= OnExpansionsChanged;
    }
}

